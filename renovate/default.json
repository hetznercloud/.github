{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitScopeDisabled",
    ":semanticCommitTypeAll(deps)",
    ":enablePreCommit",
    ":enableVulnerabilityAlerts"
  ],
  "packageRules": [
    {
      "description": ["automerge pre-commit hooks minor and patch version"],
      "matchManagers": ["pre-commit"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": ["automerge golangci-lint minor and patch version"],
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepNames": ["golangci/golangci-lint"],
      "automerge": true
    },
    {
      "description": ["automerge patch version"],
      "updateTypes": ["patch"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github\\/(?:workflows|actions)\\/.+\\.ya?ml$"],
      "matchStrings": [
        "(?:version|VERSION): (?<currentValue>.+) # renovate: datasource=(?<datasource>[a-z-]+) depName=(?<depName>.+)(?: lookupName=(?<lookupName>.+))?(?: versioning=(?<versioning>[a-z-]+))?(?: extractVersion=(?<extractVersion>.+))?"
      ]
    }
  ]
}
